<core:FragmentDefinition xmlns="sap.m"
    xmlns:smartfilterbar="sap.ui.comp.smartfilterbar"
    xmlns:ce="sap.ui.codeeditor"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">
    <Dialog contentWidth="1000px" resizable="true" draggable="true" >
        <customHeader>
            <OverflowToolbar>
                <Title text="PDF" />
                <ToolbarSpacer />
                <Button icon="sap-icon://decline" press=".onCloseDialog" />
            </OverflowToolbar>
        </customHeader>

        <PDFViewer id="pdfView" class="sapUiSmallMarginBegin" source="./attachments/FileEsempi.pdf" isTrustedSource="true" title="{modelloPDF>id}" showDownloadButton="false" width="100%" height="1000px">
            <layoutData>
                <FlexItemData growFactor="1" />
            </layoutData>
        </PDFViewer>

    </Dialog>
</core:FragmentDefinition>
